{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "whatsappb-next": [
        "../packages/whatsappb-next/src/index.ts"
      ],
      "whatsappb-next/*": [
        "../packages/whatsappb-next/src/*"
      ]
    },
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "target": "ES2017",
    "allowJs": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
